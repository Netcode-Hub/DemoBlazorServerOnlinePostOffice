@if (ShowLoginPage)
{
    <div class="container mt-4 ">
        <div class="row">
            <div class="col-md-6 offset-3 col-sm-12">
                <div class="card mt-2 border-1 shadow-lg">
                    <div class="card border-1 shadow-lg" style=" background-image: linear-gradient(to right, #947FFF, #F875B3);">
                        <div class="card border-1 shadow-lg" style=" background-image: linear-gradient(to right, #947FFF, #F875B3);">
                            <div class="card mt-1 border-1 shadow-lg" style=" background-image: linear-gradient(to right, #947FFF, #F875B3);">
                                <div class="card border-1 shadow-lg">
                                    <div class="card border-1 shadow-lg">
                                        <div class="card-header"><h4>Login An Account</h4></div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-xl-3"></div>
                                                <div class=" col-xl-6 col-md-4 col-sm-12">
                                                    <div class="card border-1 shadow-lg mb-3">
                                                        <div class="card-header">Provide details to login</div>
                                                        <div class="card-body">
                                                            <EditForm Model="LoginModel" OnValidSubmit="HandleLoginOperation">
                                                                <DataAnnotationsValidator />
                                                                <ValidationSummary />
                                                                <div class="form-group">
                                                                    <label class="form-label">Email Address</label>
                                                                    <InputText class="form-control" @bind-Value="LoginModel.Email" DisplayName="Email Address"></InputText>
                                                                    <ValidationMessage For="()=>LoginModel.Email" />
                                                                </div>
                                                                <div class="form-group mt-3">
                                                                    <label class="form-label">Password</label>
                                                                    <InputText class="form-control" @bind-Value="LoginModel.Password" DisplayName="Password"></InputText>
                                                                    <ValidationMessage For="()=>LoginModel.Password" />
                                                                </div>
                                                                <div class="form-group mt-4">
                                                                    <button type="submit" class="btn btn-success float-end">Login</button>
                                                                </div>
                                                            </EditForm>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@code {
    [Parameter] public bool ShowLoginPage { get; set; }
    [Parameter] public EventCallback<Login> HandleLoginOperationCallBack { get; set; }
    private Login LoginModel { get; set; } = new();
    private async Task HandleLoginOperation()
    {
        await HandleLoginOperationCallBack.InvokeAsync(LoginModel);
        LoginModel = new Login();
    }
}